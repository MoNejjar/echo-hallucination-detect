{
  "ambiguous_entities": [
    "\\b(it|this|that|they|them)\\b(?!\\s+(?:is|are|was|were|will|should|can|could))",
    "\\bthe\\s+(?:thing|item|person|place|concept)\\b",
    "\\bsuch\\s+(?:things?|items?|people?)\\b"
  ],
  "vague_quantifiers": [
    "\\b(?:many|several|some|few|most|various|numerous)\\b(?!\\s+specific)",
    "\\ba\\s+(?:lot|bunch|number)\\s+of\\b",
    "\\bmore\\s+or\\s+less\\b"
  ],
  "unsupported_claims": [
    "\\b(?:obviously|clearly|certainly|definitely|absolutely)\\b",
    "\\beveryone\\s+(?:knows|agrees|thinks)\\b",
    "\\bit\\s+is\\s+(?:well-known|common\\s+knowledge)\\b"
  ],
  "temporal_ambiguity": [
    "\\b(?:recently|lately|soon|eventually|sometime)\\b",
    "\\bin\\s+the\\s+(?:past|future|near\\s+future)\\b",
    "\\ba\\s+(?:while|long\\s+time)\\s+ago\\b"
  ],
  "rules": {
    "R1.1": "Avoid ambiguous pronouns without clear antecedents",
    "R1.2": "Replace vague references with specific entities",
    "R2.1": "Use precise quantifiers instead of vague terms",
    "R2.2": "Provide specific measurements when possible",
    "R3.1": "Support claims with evidence or context",
    "R3.2": "Avoid absolute statements without justification",
    "R4.1": "Specify exact timeframes instead of relative terms",
    "R4.2": "Use concrete dates when referring to events"
  }
}
